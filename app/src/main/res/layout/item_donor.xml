<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin5"
        card_view:cardCornerRadius="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:layout_margin="@dimen/margin10">

            <ImageView
                android:id="@+id/imageUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="@dimen/margin10"
                android:layout_marginLeft="11dp"
                android:layout_marginTop="8dp"
                android:src="@drawable/user8" />

            <TextView
                android:id="@+id/textUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mohan Das"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/imageUser"
                android:textColor="@color/design_default_color_primary"
                android:layout_marginLeft="@dimen/margin5"
                android:layout_marginTop="10dp"
                android:textSize="17sp"/>

            <TextView
                android:id="@+id/textLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1.2 km"
                android:drawableLeft="@drawable/marker"
                android:drawablePadding="@dimen/margin5"
                android:layout_alignParentRight="true"
                android:textColor="#009800"
                android:layout_marginRight="@dimen/margin10"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/textCity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Delhi"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"
                android:textColor="@android:color/black"
                android:layout_marginLeft="@dimen/margin10"
                android:layout_marginBottom="@dimen/margin5"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/txtBloodGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="B+"
                android:textSize="18sp"
                android:textColor="@android:color/black"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/margin5"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/margin10"
                android:paddingRight="@dimen/margin10"
                android:text="Contact Now"
                android:textColor="@android:color/white"
                android:textSize="17sp"
                android:textAllCaps="false"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_margin="@dimen/margin5"
                android:background="@drawable/btn_border"/>



        </RelativeLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>
